<?xml version='1.0' encoding='utf-8'?>
<widget id="com.algonquin.li000592.playr" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>li000592-playr</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="li000592@algonquinlive.com" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="\res\icons\android\Icon-48.png" density="mdpi" />
        <icon src="\res\icons\android\Icon-72.png" density="hdpi" />
        <icon src="\res\icons\android\Icon-96.png" density="xhdpi" />
        <icon src="\res\icons\android\Icon-144.png" density="xxhdpi" />
        <icon src="\res\icons\android\Icon-192.png" density="xxxhdpi" />
        
        <splash src="\res\screen\android\Landscape-mdpi.png" density="land-mdpi"/>
        <splash src="\res\screen\android\Portrait-mdpi.png" density="port-mdpi"/>

        <splash src="\res\screen\android\Landscape-hdpi.png" density="land-hdpi"/>
        <splash src="\res\screen\android\Portrait-hdpi.png" density="port-hdpi"/>
        
        <splash src="\res\screen\android\Landscape-xhdpi.png" density="land-xhdpi"/>
        <splash src="\res\screen\android\Portrait-xhdpi.png" density="port-xhdpi"/>

        <splash src="\res\screen\android\Landscape-xxhdpi.png" density="land-xxhdpi"/>
        <splash src="\res\screen\android\Portrait-xxhdpi.png" density="port-xxhdpi"/> 
        
        <splash src="\res\screen\android\Landscape-xxxhdpi.png" density="land-xxxhdpi"/>
        <splash src="\res\screen\android\Portrait-xxxhdpi.png" density="port-xxxhdpi"/>
        
        <preference name="AutoHideSplashScreen" value="true" />
        <preference name="SplashScreenDelay" value="3000" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
